<div class="weapons-table">
  {weaponCategories.map(category => (
    <section class="weapon-category">
      <h3>{category.name}</h3>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Название</th>
              <th>Урон</th>
              <th>Свойства</th>
              <th>Приём</th>
              <th>Вес</th>
              <th>Цена</th>
            </tr>
          </thead>
          <tbody>
            {category.weapons.map(weapon => (
              <tr>
                <td>
                  {weapon.name}
                  <span class="name-en">[{weapon.nameEn}]</span>
                </td>
                <td>{weapon.damage}</td>
                <td>{weapon.properties.join(', ')}</td>
                <td>{weapon.technique}</td>
                <td>{weapon.weight}</td>
                <td>{weapon.price}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>
  ))}
</div>

<style>
  .weapons-table {
    margin: 2rem 0;
  }

  .weapon-category {
    margin-bottom: 2rem;
  }

  .table-container {
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
  }

  th, td {
    padding: 0.75rem;
    border: 1px solid var(--card-border);
    text-align: left;
  }

  th {
    background: var(--card-bg);
    font-weight: 600;
  }

  tr:nth-child(even) {
    background: var(--background);
  }

  .name-en {
    color: var(--text);
    opacity: 0.7;
    margin-left: 0.5rem;
    font-size: 0.9em;
  }
</style>