<div class="armors-table">
  {armorCategories.map(category => (
    <section class="armor-category">
      <h3>{category.name}</h3>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Название</th>
              <th>КД</th>
              <th>Требование силы</th>
              <th>Скрытность</th>
              <th>Вес</th>
              <th>Цена</th>
            </tr>
          </thead>
          <tbody>
            {category.armors.map(armor => (
              <tr>
                <td>
                  {armor.name}
                  <span class="name-en">[{armor.nameEn}]</span>
                </td>
                <td>{armor.ac}</td>
                <td>{armor.strength_req}</td>
                <td>{armor.stealth}</td>
                <td>{armor.weight}</td>
                <td>{armor.price}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>
  ))}
</div>

<style>
  .armors-table {
    margin: 2rem 0;
  }

  .armor-category {
    margin-bottom: 2rem;
  }

  .table-container {
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
  }

  th, td {
