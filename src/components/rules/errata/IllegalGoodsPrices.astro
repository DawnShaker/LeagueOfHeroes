  }

  .price-tables {
    display: grid;
    gap: 1.5rem;
  }

  h3 {
    margin: 1rem 0;
    color: var(--primary);
  }

  .price-table {
    width: 100%;
    border-collapse: collapse;
  }

  .price-table td {
    padding: 0.5rem;
    border: 1px solid var(--card-border);
  }

  .price-table td:last-child {
    text-align: right;
    font-weight: 500;
  }
</style>