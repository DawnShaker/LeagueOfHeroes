  <div class="tools-grid">
    {tools.map(tool => (
      <div class="tool-card">
        <div class="tool-header">
          <h4>{tool.name}</h4>
          <span class="name-en">[{tool.nameEn}]</span>
        </div>
        <div class="tool-details">
          <p><strong>Стоимость:</strong> {tool.cost}</p>
          <p><strong>Характеристика:</strong> {tool.stat}</p>
          <p><strong>Вес:</strong> {tool.weight}</p>
          <p><strong>Использование:</strong> {tool.usage}</p>
          <div class="craftable">
            <strong>Создание:</strong>
            <p>{tool.craftable.join(", ")}</p>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .tools-section {
    margin-bottom: 2rem;
