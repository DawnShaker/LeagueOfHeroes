    background: var(--card-bg);
    border-radius: 0.5rem;
    border: 1px solid var(--card-border);
    margin-bottom: 1.5rem;
    overflow: hidden;
  }

  .activity-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--card-border);
  }

  .basic-info {
    display: grid;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .activity-search {
    margin-top: 1rem;
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  th, td {
    padding: 0.5rem;
    border: 1px solid var(--card-border);
    text-align: center;
  }

  th {
    background: var(--background);
    font-weight: 600;
  }

  tr:nth-child(even) {
    background: var(--background);
  }

  .info-item {
    display: flex;
    gap: 0.5rem;
  }

  .label {
    font-weight: 600;
    color: var(--primary);
  }

  .activity-details {
    border-top: 1px solid var(--card-border);
  }

  summary {
    padding: 1rem 1.5rem;
    cursor: pointer;
    font-weight: 600;
  }

  summary:hover {
    background: var(--nav-hover-bg);
  }

  .details-content {
    padding: 1.5rem;
    border-top: 1px solid var(--card-border);
  }

  h4 {
    color: var(--primary);
    margin-bottom: 1rem;
  }

  h5 {
    margin: 1rem 0 0.5rem;
  }

  section {
    margin-bottom: 2rem;
  }

  section:last-child {
    margin-bottom: 0;
  }

  .complications-table table {
    width: 100%;
    border-collapse: collapse;
  }

  .complications-table td {
    padding: 0.5rem;
    border: 1px solid var(--card-border);
  }

  .complications-table td:first-child {
    width: 2.5rem;
