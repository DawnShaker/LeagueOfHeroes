---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<section class="activity-category">
  <h2>{title}</h2>
  <p class="category-description">{description}</p>
  <div class="activities">
    <slot />
  </div>
</section>

<style>
  .activity-category {
    margin-bottom: 3rem;
  }

  h2 {
    color: var(--primary);
    margin-bottom: 1rem;
  }

  .category-description {
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .activities {
    display: grid;
    gap: 1.5rem;
  }
</style>