    <button id="palette-open" class="theme-toggle palette-open" aria-label="Open palette editor">üé®</button>
  
    <div id="palette-modal" class="palette-modal" role="dialog" aria-modal="true" aria-hidden="true">
      <div class="palette-panel">
        <header>
          <h3>–ù–∞—Å—Ç—Ä–æ–π–∫–∞ –ø–∞–ª–∏—Ç—Ä—ã</h3>
          <button id="palette-close" class="close">‚úï</button>
        </header>
  
        <div class="palette-body">
          <label for="accent-color">–ê–∫—Ü–µ–Ω—Ç–Ω—ã–π —Ü–≤–µ—Ç</label>
          <input id="accent-color" type="color" value="#7c3aed">
          <div class="presets">
            <button class="preset" data-color="#7c3aed" style="background:#7c3aed"></button>
            <button class="preset" data-color="#ea580c" style="background:#ea580c"></button>
            <button class="preset" data-color="#059669" style="background:#059669"></button>
            <button class="preset" data-color="#0ea5e9" style="background:#0ea5e9"></button>
          </div>
  
          <div class="actions">
            <button id="apply-palette">–ü—Ä–∏–º–µ–Ω–∏—Ç—å</button>
            <button id="save-palette">–°–æ—Ö—Ä–∞–Ω–∏—Ç—å</button>
            <button id="reset-palette">–°–±—Ä–æ—Å</button>
          </div>
  
