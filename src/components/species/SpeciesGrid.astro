---
import { species } from '../../data/species';
import SpeciesCard from './SpeciesCard.astro';
---

<div class="species-grid">
  {species.map(s => (
    <SpeciesCard
      id={s.id}
      name={s.name}
      description={s.description}
      imageUrl={s.imageUrl}
    />
  ))}
</div>

<style>
  .species-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    padding: 1.5rem;
  }
</style>