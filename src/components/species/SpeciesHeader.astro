---
interface Props {
  name: string;
  nameEn: string;
  sourceBook: string;
}

const { name, nameEn, sourceBook } = Astro.props;
---

<div class="species-header">
  <h1>{name} <span class="name-en">[{nameEn}]</span></h1>
  <div class="source">Источник: {sourceBook}</div>
</div>

<style>
  .species-header {
    padding: 1rem;
    background: var(--card-bg);
    border-radius: 0.5rem 0.5rem 0 0;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .name-en {
    color: var(--text);
    opacity: 0.7;
    font-size: 0.8em;
  }

  .source {
    color: var(--text);
    opacity: 0.8;
  }
</style>