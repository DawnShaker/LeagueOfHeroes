---
interface Props {
  spell: {
    id: string;
    name: string;
    nameEn: string;
    level: string;
    school: string;
  };
}

const { spell } = Astro.props;
---

<div class="spell-card" data-spell-id={spell.id}>
  <h3>{spell.name} <span class="name-en">[{spell.nameEn}]</span></h3>
  <span class="spell-meta">
    {spell.level === 'cantrip' ? 'Заговор' : `${spell.level} уровень`} • {spell.school}
  </span>
</div>

<style>
  .spell-card {
    padding: 0.5rem 0.75rem;
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background-color 0.2s;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .spell-card:hover {
    background: var(--nav-hover-bg);
  }

  .spell-card.active {
    background: var(--nav-hover-bg);
    border-color: var(--primary);
  }

  h3 {
    margin: 0;
    color: var(--primary);
    font-size: 1rem;
  }

  .name-en {
    color: var(--text);
    opacity: 0.7;
    font-size: 0.8em;
  }

  .spell-meta {
    font-size: 0.9em;
    color: var(--text);
    opacity: 0.8;
    white-space: nowrap;
    margin-left: 1rem;
  }

</style>