    margin-top: 2rem;
    background: var(--card-bg);
    padding: 1.5rem;
    border-radius: 0.5rem;
    box-shadow: var(--card-shadow);
    border: 1px solid var(--card-border);
  }

  .currency-table {
    width: 100%;
    margin-top: 1rem;
    border-collapse: collapse;
  }

  .currency-table th,
  .currency-table td {
    padding: 0.75rem;
    border: 1px solid var(--card-border);
    text-align: left;
  }

  .currency-table th {
    background: var(--background);
    font-weight: 600;
  }
</style>