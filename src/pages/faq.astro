<style>
  .content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .faq-container {
    margin-top: 2rem;
  }

  .faq-item {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 0.5rem;
    margin-bottom: 1rem;
  }

  .faq-item summary {
    padding: 1rem;
    cursor: pointer;
    font-weight: 600;
  }

  .faq-content {
    padding: 1rem;
    border-top: 1px solid var(--card-border);
  }

  .faq-content ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .faq-content li {
    margin-bottom: 0.5rem;
  }
  
  .faq-content a {
    color: var(--primary);
    text-decoration: none;
  }

  .faq-content a:hover {
    text-decoration: underline;
  }

  .species-table {
    margin-top: 1rem;
    overflow-x: auto;
  }

  .species-table table {
    width: 100%;
    border-collapse: collapse;
  }

  .species-table th,
  .species-table td {
    padding: 0.5rem;
    border: 1px solid var(--card-border);
    text-align: left;
  }

  .species-table th {
    background: var(--background);
    font-weight: 600;
  }

  .species-table tr:nth-child(even) {
    background: var(--background);
  }
</style>