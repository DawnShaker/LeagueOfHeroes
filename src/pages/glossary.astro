import Layout from "../layouts/Layout.astro";
import { glossary } from "../data/glossary";

const items = [...glossary].sort((a, b) => a.name.localeCompare(b.name, "ru"));

const categories = Array.from(new Set(glossary.map((g) => g.category))).sort();
---

